<% layout('layouts/boilerplate')%>

<div class="row">
    <h1 class="text-center">Edit Poem</h1>
    <div class="col-6 offset-3">
        <form action="/poems/<%=poem._id%>?_method=PUT" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="poem[title]" value="<%=poem.title %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>

                <div class="mb-3">
                    <label class="form-label" for="ballad">Ballad</label>
                    <textarea class="form-control" type="text" id="ballad" name="poem[ballad]"
                        required><%= poem.ballad%></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update Poem</button>
                </div>
        </form>
        <a href="/poems/<%= poem._id%>">Back To Poem</a>

    </div>
</div>