<% layout('layouts/boilerplate')%>

<center>
    <h1>All poems</h1>
</center>
<!-- <div>
    <a href="/poems/new">Add New Poem</a>
</div> -->
<% for (let poem of poems){%>
<div class="card mb-3">
    <div class="row">
        <div class="col-10 p-0">
            <div class="card m-0 p-0">
                <div class="col-md-8">
                    <div class="card-body position-relative">

                        <h5 class="card-title"><%= poem.title %> </h5>

                    </div>
                </div>
            </div>
        </div>
        <div class="col-2 p-0">
            <div class="card mb-0 ml-0 p-0">
                <a class="btn btn-primary btn-lg p-3" href="/poems/<%=poem._id%>">Read</a>
                <!-- <button type="button" class="btn btn-outline-secondary">Secondary</button> -->
            </div>
        </div>
    </div>
</div>
<% }%>